[credential]
	helper = /usr/share/doc/git/contrib/credential/libsecret/git-credential-libsecret
[diff]
    tool = default-difftool
[difftool "default-difftool"]
    cmd = code --wait --diff $LOCAL $REMOTE
[merge]
    tool = vscode
[mergetool "vscode"]
    cmd = code --wait $MERGED
[core]
	editor = code --wait